<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView style="?android:textAppearanceMedium"
        android:padding="16dp"
        android:lineSpacingMultiplier="1.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workout Log Empty"
        android:id="@+id/log_empty_text"
        android:layout_centerInParent="true"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <Button
            android:id="@+id/start_new_workout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@android:color/white"
            android:drawableTop="@android:drawable/ic_input_add"
            android:text="Start New Workout" />
        <Button
            android:id="@+id/copy_previous_workout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:drawableTop="@drawable/baseline_file_copy_24"
            android:text="Copy Previous Workout" />
    </LinearLayout>



</RelativeLayout>